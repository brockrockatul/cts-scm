package com.carefirst.apdet.swing;import java.awt.event.*;import javax.swing.*;import com.carefirst.apdet.main.ApplicationInfo;public class Display extends JFrame implements ActionListener { private static final long serialVersionUID = 1L; JRadioButton rb1, rb2; JTextField tfpath, trpath; JLabel lselect, lfpath, lrpath; JButton b; private JTextArea outputTextArea; private Task task; JProgressBar jb; JCheckBox jcb;  int i = 0, num = 0; Display() {  setTitle("SVN Snooper");  addWindowListener(new WindowAdapter() {   public void windowClosing(WindowEvent windowEvent) {    System.exit(0);   }  });  lselect = new JLabel("Select Repository:");  lselect.setBounds(50, 50, 200, 30);  rb1 = new JRadioButton("SVN", true);  rb1.setBounds(250, 50, 100, 30);  rb2 = new JRadioButton("Local Dir");  rb2.setBounds(350, 50, 100, 30);  ButtonGroup bg = new ButtonGroup();  bg.add(rb1);  bg.add(rb2);  lfpath = new JLabel("SVN / Local Path:");  lfpath.setBounds(50, 100, 200, 30);  tfpath = new JTextField();  tfpath.setBounds(250, 100, 300, 30);  lrpath = new JLabel("Report Path:");  lrpath.setBounds(50, 150, 200, 30);  trpath = new JTextField();  trpath.setBounds(250, 150, 300, 30);    jcb = new JCheckBox("Fix Issue");  jcb.setBounds(50, 200, 200, 30);    b = new JButton("Submit");  b.setBounds(250, 250, 80, 30);  b.addActionListener(this);  add(lselect);  add(rb1);  add(rb2);  add(lfpath);  add(tfpath);  add(lrpath);  add(trpath);    add(jcb);  add(b);  outputTextArea = new JTextArea("", 5, 20);  outputTextArea.setBounds(50, 300, 500, 100);  JScrollPane scrollPane = new JScrollPane(outputTextArea);  scrollPane.setBounds(50, 300, 500, 100);  add(scrollPane);    setSize(650, 500);  setLayout(null);  setVisible(true); } String msg=new String(); @Override  public void actionPerformed(ActionEvent arg0) {  String dataFilePath = tfpath.getText();  String reportFileName = trpath.getText();  String editflag = Boolean.toString(jcb.isSelected());  msg = "Processing.. \n";  task = new Task();  task.start();  ApplicationInfo ai = new ApplicationInfo();  String FinalMsg = new String();  if (rb1.isSelected()) {   JOptionPane.showMessageDialog(this, "You selected svn: " +dataFilePath);   try {    FinalMsg=ai.initApplicationDetails( dataFilePath,reportFileName,"true",editflag);    JOptionPane.showMessageDialog(this, FinalMsg);   } catch (Exception e) {    e.printStackTrace();    JOptionPane.showMessageDialog(this,e.getMessage());   }  }  if (rb2.isSelected()) {   JOptionPane.showMessageDialog(this, "You selected Local Dir :" +dataFilePath);   try {    FinalMsg=ai.initApplicationDetails( dataFilePath,reportFileName,"false",editflag);    JOptionPane.showMessageDialog(this, FinalMsg);   } catch (Exception e) {    e.printStackTrace();    JOptionPane.showMessageDialog(this,e.getMessage());   }     }    msg = "Completed.. \n";  Task task1 = new Task();  task1.start(); } public class Task extends Thread {  public Task() {  }  public void run() {       SwingUtilities.invokeLater(    new Runnable() {     public void run() {      outputTextArea.setText(outputTextArea.getText()+ String.format(msg));     }    });  } } public static void main(String[] args) {  new Display(); }}
